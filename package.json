{
    "name": "mile-two-cra-redux",
    "version": "0.1.4",
    "private": true,
    "dependencies": {
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-redux": "^7.1.1",
        "redux": "^4.0.4",
        "redux-devtools-extension": "^2.13.8"
    },
    "scripts": {
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "format": "prettier --write 'src/**/*' && eslint --fix src && sass-lint-auto-fix",
        "lighthouse": "BROWSER=none PORT=5051 npm start & (sleep 4 && lighthouse http://localhost:5051 --output html --output-path ./coverage/Lighthouse.html --quiet --chrome-flags='--headless' --view && killall node -9)",
        "lint": "eslint src && sass-lint -v -q",
        "release": "standard-version --no-verify",
        "security": "npm audit  & npm outdated & depcheck --ignores='eslint-*,husky,lint-staged,node-sass,pretty-quick,babel-*' --skip-missing=true",
        "sonar": "sonar-scanner",
        "start": "react-scripts start",
        "test": "rm -rf ./coverage && CI=true react-scripts test --verbose --env=jsdom --coverage --colors"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "coverageReporters": [
            "text-summary",
            "lcov"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js, jsx}",
            "!<rootDir>/node_modules/",
            "!src/**/*Constants.js",
            "!src/**/*LocalStorage.js",
            "!src/**/*index.js",
            "!src/setupTests.js",
            "!src/serviceWorker.js"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test && NODE_ENV=production lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,scss,sass}": [
            "pretty-quick --staged",
            "npm run format",
            "git add"
        ],
        "*.{json,css,md}": [
            "pretty-quick --staged",
            "git add"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/react": "^9.3.0",
        "depcheck": "^0.8.3",
        "eslint": "^6.5.1",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "husky": "^3.0.9",
        "lighthouse": "^5.6.0",
        "lint-staged": "^9.4.2",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^2.0.0",
        "react-scripts": "^3.2.0",
        "sass-lint": "^1.13.1",
        "sass-lint-auto-fix": "0.17.0",
        "sonar-scanner": "^3.1.0",
        "standard-version": "^7.0.0"
    },
    "description": "Mile Two App built on top of `create-react-app`",
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC"
}
